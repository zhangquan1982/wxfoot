@{
    ViewBag.Title = "PreViewGrid";
    Layout = null;
}
<script src="~/Scripts/MiniUI/scripts/boot.js" type="text/javascript"></script>
<script src="~/Scripts/MiniUI/core.js" type="text/javascript"></script>
<script src="~/Scripts/moment.min.js"></script>
<script type="text/javascript">
        var grid;
        $(document).ready(function () {
            mini.parse();
            grid = mini.get("grid1");
            var sernum = mini.getbyName("SerialNum").getValue();
            grid.load({ SerialNum: sernum });
        });

</script>
<div>
    <div id="grid1" class="mini-datagrid" style="width: 100%; height:95%;" allowresize="true"
         url="@Url.Action("GetPersonPayListBySerialNum", "PatiPayList")" idfield="SerialNum" pagesize="100">
        <div property="columns">
            <div type="checkcolumn" width="25">
            </div>
            <div field="SerialNum" width="80" headeralign="center" align="center" >
                入住编号
            </div>
            <div field="PatiName" width="70" headeralign="center" align="center" >
                老人姓名
            </div>
            <div field="PayAmount" width="70" headeralign="center" align="center" >
                交款金额
            </div>
            <div field="InvoiceId" width="70" headeralign="center" align="center" >
                单据号
            </div>
            <div field="CreateDate" width="70" headeralign="center" align="center"  dateformat="yyyy-MM-dd">
                交款日期
            </div>
            <div field="PayModeType" width="70" headeralign="center" align="center"  renderer="paymodeselect">
                交款方式
            </div>
            <div field="CreateUser" width="70" headeralign="center" align="center" >
                操作员
            </div>
        </div>
    </div>
    <div><input name="SerialNum" class="mini-textbox" visible="false" value="@ViewBag.SerialNum" /></div>
</div>