@model HujingModel.SysRoleEntity
@{
    Layout = null;
}
<head>
    <title>员工面板</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <link href="../../Scripts/MiniUI/demo.css" rel="stylesheet" type="text/css" />
    <script src="../../Scripts/MiniUI/scripts/boot.js" type="text/javascript"></script>
    <script src="../../Scripts/MiniUI/core.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.form.js" type="text/javascript"></script>
    <style type="text/css">
        html, body
        {
            padding: 0;
            margin: 0;
            border: 0;
            height: 100%;
            overflow: hidden;
        }
        table td
        {
            font-size: 12px;
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function () {

            mini.parse();
            var form = new mini.Form("frmAdd");

            //保存
            $("#btnSave").click(function (event) {

                form.validate();
                if (form.isValid() == false) {
                    return;
                }
                $("#frmAdd").ajaxSubmit({
                    success: function (result) {
                        if (result.Data.status == 100) {
                            mini.showTips({ content: "保存成功！", state: "success", x: "center", y: "top", timeout: 3000 });
                            window.CloseOwnerWindow("save");
                        }
                        else {
                            mini.showTips({ content: result.Data.msg, state: "danger", x: "center", y: "top", timeout: 3000 });
                            return;
                        }
                    },
                    error: function () {
                        mini.showTips({ content: "保存失败！", state: "warning", x: "center", y: "top", timeout: 3000 });
                    }
                });
            });
        });


        function onCancel(e) {
            window.CloseOwnerWindow("cancel");
        }
    </script>
</head>
<body>
    <form id="frmAdd" method="post" action="/Role/Save">
    <input name="id" class="mini-hidden" />
    <div style="padding-left: 11px; padding-bottom: 5px;padding-top: 5px;">
        <table style="table-layout: fixed;">
            <tr>
                <td>
                    角色名称：
                </td>
                <td>
                    <input id="RoleName" name="RoleName" class="mini-textbox" style="width: 150px" required="true" />
                </td>
            </tr>
            <tr>
                <td>
                    备注：
                </td>
                <td colspan="3">
                    <input name="Memo" class="mini-textarea" style="width: 280px;" />
                </td>
            </tr>
        </table>
    </div>
    <div style="text-align: center; padding: 10px;">
        <a class="mini-button" id="btnSave" href="javascript:void(0);" style="width: 60px;
            margin-right: 20px;">确定</a> <a class="mini-button" onclick="onCancel" style="width: 60px;">
                取消</a>
    </div>
    </form>
</body>
