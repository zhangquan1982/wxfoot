@model HujingModel.SysGroupEntity
@{
    ViewBag.Title = "模块增加";
    Layout = null;
}
<head>
    <title>新增模块</title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <link href="../../Scripts/MiniUI/demo.css" rel="stylesheet" type="text/css" />
    <script src="../../Scripts/MiniUI/scripts/boot.js" type="text/javascript"></script>
    <script src="../../Scripts/MiniUI/core.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.form.js" type="text/javascript"></script>
    <style type="text/css">
        html, body
        {
            padding: 0;
            margin: 0;
            border: 0;
            height: 100%;
            overflow: hidden;
        }
        table td
        {
            font-size: 12px;
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function () {

            mini.parse();
            var form = new mini.Form("frmAdd");

            //保存
            $("#btnSave").click(function (event) {

                form.validate();
                if (form.isValid() == false) {
                    return;
                }
                $("#frmAdd").ajaxSubmit({
                    success: function (callback) {
                        if (callback == "ok") {
                            window.CloseOwnerWindow("save");
                        }
                        else {
                            mini.showTips({ content: "保存失败！", state: "warning", x: "center", y: "top", timeout: 3000 });
                        }
                    },
                    error: function () {
                        mini.showTips({ content: "保存失败！", state: "warning", x: "center", y: "top", timeout: 3000 });
                    }
                });
            });
        });


        function onCancel(e) {
            window.CloseOwnerWindow("cancel");
        }
    </script>
</head>
<body>
    <form id="frmAdd" method="post" action="/SysGroup/Save">
    <input name="id" class="mini-hidden" />
    <div style="padding-left: 11px; padding-bottom: 5px;">
        <table style="table-layout: fixed;">
            <tr>
                <td>
                    模块编码：
                </td>
                <td>
                    <input id="GroupId" name="GroupId" class="mini-textbox" style="width: 150px" required="true" />
                </td>
            </tr>
            <tr>
                <td>
                    模块名称：
                </td>
                <td>
                    <input id="GroupName" name="GroupName" class="mini-textbox" style="width: 150px"
                        required="true" />
                </td>
            </tr>
            <tr>
                <td>
                    父模块：
                </td>
                <td>
                    <input name="ParentID" class="mini-combobox" valuefield="GroupID" textfield="GroupName"
                        url='@Url.Action("GetRootGroup")'  emptytext="请选择父模块" />
                </td>
            </tr>
            <tr>
                <td>
                    排序：
                </td>
                <td>
                    <input id="ShowOrder" name="ShowOrder" class="mini-textbox" style="width: 150px"
                        required="true" />
                </td>
            </tr>
            <tr>
                <td>
                    IconCls：
                </td>
                <td>
                    <input id="IconCls" name="IconCls" class="mini-textbox" style="width: 150px" required="true" />
                </td>
            </tr>
            <tr>
                <td>
                    URL：
                </td>
                <td colspan="3">
                    <input name="URL" class="mini-textbox" style="width: 150px;" />
                </td>
            </tr>
        </table>
    </div>
    <div style="text-align: center; padding: 10px;">
        <a class="mini-button" id="btnSave" href="javascript:void(0);" style="width: 60px;
            margin-right: 20px;">确定</a> <a class="mini-button" onclick="onCancel" style="width: 60px;">
                取消</a>
    </div>
    </form>
</body>
