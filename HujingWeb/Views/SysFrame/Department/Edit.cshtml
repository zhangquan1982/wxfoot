                    return;
                }
                //$("#form1").submit();

                $('#form1').ajaxSubmit({
                    success: function (callback) {
                        if (callback == "ok") {
                            window.CloseOwnerWindow("save");
                        }
                        else {
                            mini.showTips({
                                content: "修改失败！",
                                state: "warning",
                                x: "center",
                                y: "top",
                                timeout: 3000
                            });
                        }
                    },
                    error: function () {
                        mini.showTips({
                            content: "修改失败！",
                            state: "warning",
                            x: "center",
                            y: "top",
                            timeout: 3000
                        });
                    }
                });
            });
        });


        function SetData(data) {
            if (data.action == "new") {
                mini.getbyName("UpperId").setValue(data.UpperId);
                mini.getbyName("UpperName").setValue(data.UpperName);
            }
        }

    </script>
