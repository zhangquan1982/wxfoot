@model HujingWeb.Models.UserInfoModel
@{
    ViewBag.Title = "系统登录";
}
<html>
<head>
    <meta charset="utf-8" content="" />
    <meta name="系统登录" content="养老院管理系统登录" />
    <link href="../../Scripts/Login/css/style.css" rel="stylesheet" type="text/css" />
    <script src="../../Scripts/MiniUI/scripts/jquery-1.6.2.min.js" type="text/javascript"></script>
    <link href="../../../Scripts/MiniUI/demo.css" rel="stylesheet" type="text/css" />
    <script src="../../../Scripts/MiniUI/scripts/boot.js" type="text/javascript"></script>
    <script src="../../../Scripts/MiniUI/core.js" type="text/javascript"></script>
    <style type="text/css">
        .loginClass {
            width: 800px;
            height: 60px;
            overflow: hidden;
            margin: auto;
            background: url(../../../Images/HJYL.gif) no-repeat;
            text-align: center;
            display: block;
        }
    </style>




</head>
<body style=" width:100%; height:80%; background-size:100% auto; background-image:url(../../Images/HJLogin.jpg)">
    <div class="main">
        <div class="user">
            <img src="../../Scripts/Login/images/user.png" alt="">
        </div>
        <div class="login" style="background-color: Background" class="demo">
            <div class="inset">
                <!-----start-main---->
                <form id="frmLogin" action="/Home/LoginOn" method="post">
                    <div>
                        <span>
                            <label>
                                登录名
                            </label>
                        </span> <span>
                            <input type="text" class="textbox" name="LoginName">
                        </span>
                    </div>
                    <div>
                        <span>
                            <label>
                                密码
                            </label>
                        </span> <span>
                            <input type="password" class="password" id="pwd" name="Password">
                        </span>
                    </div>
                    <div class="sign">
                        <div class="submit">
                            <input id="btnSave" type="submit" name="btnSave" value="登录" />
                            <label style="margin-left: 10px; color: red" id="Msg">@ViewBag.ErrMsg</label>
                        </div>
                        <div class="clear">
                        </div>
                    </div>
                </form>
            </div>
            <div style="font-size:34px;position: absolute;font-weight:bold; font-family:YouYuan; top:30px; left: 200px">瑚景养老信息管理平台【V1.0】</div>
            <div style="font-size:20px;position: absolute;font-weight:bold;font-family:YouYuan; top:500px; right: 100px">软件版权：南京瑚景软件有限公司</div>
            <div style="font-size:26px; font-weight:bold;position: absolute; top:600px; left: 200px">南京市鼓楼区国悦颐养服务中心</div>
        </div>
        <!-----//end-main---->
    </div>
    <!-----start-copyright---->
    <div class="copy-right">
        <p>
        </p>
    </div>
    <!-----//end-copyright---->

    <script type="text/javascript">
        var WinAlerts = window.alert;
        window.alert = function (e) {
            if (e != null && e.indexOf("提示内容") > -1) {
                alert("瑚景养老信息系统！")
            } else {
                WinAlerts(e);
            }
        };
    </script>
</body>
</html>
